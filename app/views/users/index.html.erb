
        <div class="span9">
		  <div class="row-fluid">
			<div class="page-header">
				<h1>Users <small>All users</small></h1>
			</div>
			<table class="table table-striped table-bordered table-condensed">
				<thead>
					<tr>
						<th>Name</th>
						<th>Age</th>
						<th>Gender</th>
						<th>Basic Pay</th>
						<th>Net salary</th>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
				<% @users.each do |user| %>
				    <tr class="list-users" id="list_user_<%=user.id%>">
					<td><%= user.name %></td>
					<td><%= user.age %></td>
					<td><%= user.gender %></td>
					<td><%= user.basic_pay %></td>
					<td><b><%= user.net_pay %></b></td>
					
					<td><%= link_to "Show", user_path(user), class: "success" %></td>
					<td><%= link_to "Edit", edit_user_path(user), class: "warning" %></td>
					<td><%= link_to "Delete", user_path(user), :data => {:method=> "delete", :confirm=> true, :remote => true}, class: "error" %></td>
				    </tr>
				    <% end %>
				</tbody>
			</table>
			<%= will_paginate @users %>
		  </div>
        </div>
      