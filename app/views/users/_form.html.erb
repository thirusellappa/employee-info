<div class="span9">
		  <div class="row-fluid">
			<div class="page-header">
				<h1>New User</h1>
			</div>
			<%= form_for @user, html: { class: "form-horizontal" } do |f |%>
			<%if @user.errors.present? %><P class="error">Fix the following errors to procedd further</p> <% end %>
				  <fieldset>
					<div class="control-group">
						<%= f.label :name, class: "control-label" %>
						<div class="controls">
							<%= f.text_field :name, class: "input-xlarge"%>
							<span class="error"><%= @user.errors[:name][0].to_s %></span>
						</div>
					</div>
					<div class="control-group">
						<%= f.label :age, class: "control-label" %>
						<div class="controls">
							<%= f.text_field :age, class: "input-xlarge"%>
							<span class="error"><%= @user.errors[:age][0].to_s %></span>
						</div>
					</div>
					<div class="control-group">
						<%= f.label :gender, class: "control-label" %>
						<div class="controls">
							<%= f.select(:gender, [["Male", "male"],["Female", "female"]], :prompt => 'Select') %>
							<span class="error"><%= @user.errors[:gender][0].to_s %></span>
						</div>
					</div>
					<div class="control-group">
						<%= f.label :basic_pay, class: "control-label" %>
						<div class="controls">
							<%= f.text_field :basic_pay, class: "input-xlarge"%>
							<span class="error"><%= @user.errors[:basic_pay][0].to_s %></span>
						</div>
					</div>
					<div class="control-group">
						<%= f.label :pf_deduction, class: "control-label" %>
						<div class="controls">
							<%= f.text_field :pf_deduction, class: "input-xlarge"%>
							<span class="error"><%= @user.errors[:pf_deduction][0].to_s %></span>
						</div>
					</div>						
					<div class="form-actions">
					<%= f.submit "Save User", class: "btn btn-success btn-large" %>
					</div>					
				</fieldset>
			<% end%>
		  </div>
        </div>